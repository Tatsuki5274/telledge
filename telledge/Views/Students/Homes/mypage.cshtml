@model telledge.Models.Student


@{
	ViewBag.Title = "mypage";
	Layout = "~/Views/Shared/studentMenu.cshtml";
}
<link href="~/Scripts/lazeemenu/sass/lazeemenu.min.css" rel="stylesheet" />
<link href="~/StyleSheets/common.css" rel="stylesheet" />
<script type="text/javascript" src="~/Scripts/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="~/Scripts/lazeemenu/lazeemenu-jquery.js"></script>
<link href="~/StyleSheets/studentHomeMypage.css" rel="stylesheet" />

<main class="col-lg-offset-4 col-lg-4 col-md-offset-3 col-md-6">
	<h1>マイページ</h1>
	<ul id="menu-1">
		<li>
			<h3><span>プロフィール</span></h3>
			<ul>
				<li><span class="list-width">メールアドレス</span>@Model.mailaddress</li>
				<li><span class="list-width">ユーザー名</span>@Model.name</li>
				<li><span class="list-width">プロフィール画像</span>@Model.profileImage</li>
				<li><span class="list-width">SkypeID</span>@Model.skypeId</li>
				<li>
					<button class="btn btn-primary center" type="button" onclick="location.href='/Student/homes/edit'">変更</button>
				</li>
			</ul>
		</li>
		<li>
			<h3><span>セキュリティ</span></h3>
			<ul>
				<li><span class="list-width">パスワード</span>********</li>
				<li><span class="list-width">二段階認証</span>無効</li>
				<li>
					<button class="btn btn-primary center" type="button" onclick="location.href='/student/passwords/edit'">変更</button>
				</li>
			</ul>
		</li>
		<li>
			<h3><span>受講履歴</span></h3>
			<ul>
				<li>
					<table>
						<tr>
							<td><span class="list-width">講師名</span></td>
							<td><span class="list-width">ルーム名</span></td>
							<td><span class="list-width">特徴タグ</span></td>
						</tr>

						@foreach (var item in Model.GetSections())
						{
							<tr>
								<td><span class="list-width">@item.getRoom().getTeacher().name</span>
								<td><span class="list-width">@item.getRoom().roomName</span>
								<td><span class="list-width">@item.getRoom().tag</span>
							</tr>
						}
					</table>
				</li>
			</ul>
		</li>
		<li>
			<h3><span>アカウント</span></h3>
			<ul>
				<li>
					<div class="list-paddings">
						<p>アカウントを削除します</p>
						<ul>
							<li>
								<button class="btn btn-danger center" type="button" onclick="location.href='/student/registrations/deactivate'">退会</button>
							</li>
						</ul>
					</div>
				</li>
			</ul>
		</li>
	</ul>
	<script type="text/javascript">
		$(document).ready(function () {
			$('#menu-1').lazeemenu('collapseAll');  //メニューをすべて閉じた状態で開始する
		});
	</script>
</main>
