@model IEnumerable<telledge.Models.Room>

@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/studentMenu.cshtml";
}

<main>
    @foreach (var item in Model)
    {
    <div class="room-boxes">
        <a href="/student/rooms/show/@(item.id)">
            <h2 class="room-title">@item.roomName</h2>
        </a>
        <div class="flex">
            <div class="float flex flex-middle">
                <img class="example">
            </div>
            <div class="room-detail" class="float">
                <table class="rooms-table">
                    <col span="2" width="150px">
                    <tbody>
                        <tr>
                            <td>最低通話時間</td>
                            <td>@(item.worstTime)分</td>
                        </tr>
                        <tr>
                            <td>最大延長時間</td>
                            <td>@(item.extensionTime)分</td>
                        </tr>
                        <tr>
                            <td>タグ</td>
                            <td>@(item.tag)</td>
                        </tr>
                        <tr>
                            <td>料金</td>
                            <td>@(item.point)ポイント</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div>
            <span>@(item.description)</span>
        </div>
    </div>
    }


</main>